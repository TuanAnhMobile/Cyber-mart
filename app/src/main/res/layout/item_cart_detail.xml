<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_prod_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/clothes_nightwear_outfit_svgrepo_com" />

        <LinearLayout
            android:id="@+id/container_frame2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_frame3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/container_frame4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cart_prod_name"
                        android:layout_width="match_parent"
                        android:layout_height="19dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Minimal Stand"
                        android:textColor="#FF999999"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/cart_prod_price"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="6dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="$ 25.00"
                        android:textColor="#FF242424"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_item_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:clipToPadding="false"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_minus_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/cart_prod_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="01"
                    android:textColor="#FF242424"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/img_plus_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_add" />

                <CheckBox
                    android:id="@+id/chk_buy"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="100dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>